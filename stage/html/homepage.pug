- var pageTitle = "Home Page"
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        include pug/components/styles
    body
        .page.home-page 
            include pug/layout/sidebar
            .content-area 
                include pug/layout/header
                h2 #{pageTitle}
        include pug/components/scripts

